{{#if errors}}

{{#each errors}}
<div class="alert alert-danger">
    {{msg}}
</div>
{{/each}}
{{/if}}
{{#if success_message}}
<div class="alert alert-success">
    {{this.success_message}}
</div>
{{/if}}

{{#if error_message}}
<div class="alert alert-danger">
    {{error_message}}
</div>
{{/if}}

{{#if error}}
<div class="alert alert-danger">
    {{error}}
</div>

{{/if}}